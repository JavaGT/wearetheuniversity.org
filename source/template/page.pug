  section.banner.banner-small
    if attributes.return_url
      a(href=attributes.return_url)
        span=attributes.return_text?attributes.return_text:'Back'
    h1= attributes.title
    if attributes.author
      span.author
        a(href=attributes.author_url)=attributes.author
    if (attributes.date)
      if (typeof attributes.date === "number")
        div.date=attributes.date
      else
        div.date #{['Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday'][attributes.date.getDay()]} #{attributes.date.toISOString().replace(/\..+/, '').slice(0, 10).replace(/-/g, '/').slice(0,10)}
